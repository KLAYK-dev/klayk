{
  "mcpServers": {
    "drizzle": {
      "command": "npx",
      "args": [
        "-y",
        "github:defrex/drizzle-mcp",
        "--config",
        "./packages/database/drizzle.config.ts"
      ],
      "env": { "DATABASE_URL": "${DATABASE_URL}", "DEBUG": "drizzle-mcp:*" },
      "alwaysAllow": ["execute_query", "generate_migration", "get_schema_info"]
    }
  }
}
